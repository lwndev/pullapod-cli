{
  "name": "pullapod-cli",
  "version": "0.3.1",
  "description": "Pull a Pod - A command-line utility to download podcast episodes from RSS feeds",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pullapod": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "jest --selectProjects unit",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:all": "jest",
    "test:watch": "jest --selectProjects unit --watch",
    "test:coverage": "jest --selectProjects unit --coverage",
    "test:coverage:all": "jest --coverage",
    "lint": "eslint src tests examples --ext .ts",
    "lint:fix": "eslint src tests examples --ext .ts --fix",
    "audit": "npm audit",
    "prepare": "bash scripts/install-hooks.sh",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build && npm test && npm run lint",
    "version": "git add package.json package-lock.json",
    "postversion": "git push && git push --tags",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "keywords": [
    "podcast",
    "rss",
    "download",
    "cli",
    "audio"
  ],
  "author": "Leif Nelson and Robots",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lwndev/pullapod-cli.git"
  },
  "bugs": {
    "url": "https://github.com/lwndev/pullapod-cli/issues"
  },
  "homepage": "https://github.com/lwndev/pullapod-cli#readme",
  "dependencies": {
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "node-id3": "^0.2.6",
    "rss-parser": "^3.13.0",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/sanitize-filename": "^1.6.3",
    "jest": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "nock": "^14.0.10",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
